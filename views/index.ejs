          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Akhir Navbar -->

    <!-- Penampil Data -->
    <section id="Data" style="background-color: bisque; height: 500px;">
        <div class="container">
          <div class="row text-center">
            <div class="col">
              <h2 class="mt-4">Data Information</h2>
            </div>
          </div>
          <div class="row">
        <div class="row">
            <div class="col-md-3 mb-4 m-auto mt-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h6 class="card-title text-center">Data Sensor</h6>
                    </div>
                    <ul class="list-group list-group-numbered ">
                      <li class="list-group-item">Nilai Temperatur: <%= data['suhu'] %></li>
                      <li class="list-group-item">Deteksi Gerakan : <%= data['Sensor Gerakan'] %></li>
                      <li class="list-group-item">Kondisi Lampu :   <%= data['kondisi lampu'] %></li>
                    </ul>
                  </div>
            </div>
        </div>
      </div>
    </section>
    <!-- Akhir penampil Data -->

    <!-- footer -->
    <footer class="bg-info-subtle fw-bold text-center fixed-bottom p-3">
        <p>Copyright <i class="bi bi-c-circle"></i> 2023 Kelompok 1 CPS | All Right Reserved.</p>
    </footer>
